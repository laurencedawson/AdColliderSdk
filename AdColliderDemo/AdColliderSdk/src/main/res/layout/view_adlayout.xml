<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/adLayout_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/button_light"
        android:id="@+id/adLayout_root">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="48dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/adLayout_download">

                <ImageView
                    android:id="@+id/adLayout_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/adLayout_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/adLayout_tagline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/adLayout_download"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:text="Download"
                android:layout_centerInParent="true"
                android:background="@drawable/button_background"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:elevation="1dp"
                android:fontFamily="sans-serif"/>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>